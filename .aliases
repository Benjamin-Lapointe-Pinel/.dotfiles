alias lb='br -dsp'
alias la='ls -A'
alias ll="ls -lhA"
alias cs='cd;ls'
alias ct='cd;tree'
alias pacman='pacman --color=auto'
alias yay='yay --color=auto'
alias tmux='tmux -u'
alias bat='bat --paging=never -p'

log() {
	LOG_DIR=$HOME/log/
	mkdir -p $LOG_DIR && echo $(date -Is) "$@" >> $LOG_DIR/personnal.log
}


docker() {
    if [[ $@ == "container watch" ]]; then
        command watch -n 1 -t 'docker container ls -a --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"'
    else
        command docker "$@"
    fi
}
