command=$BLOCK_NAME/$BLOCK_NAME
separator_block_width=10

[primary]
label=🖹
command=echo "$(xclip -o |  grep -o '^.\{0,9\}' | sed -e 's/[^a-zA-Z0-9\-]/_/g')"
interval=2
separator=false

[clipboard]
label=📋
command=echo "$(xclip -o -selection "clipboard" | grep -o '^.\{0,9\}' | sed -e 's/[^a-zA-Z0-9\-]/_/g')"
interval=2

[keyindicator]
markup=pango
KEY=CAPS
interval=once
signal=11
label= 
separator=false

[keyindicator]
